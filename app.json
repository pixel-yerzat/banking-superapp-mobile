{
  "expo": {
    "name": "Banking SuperApp",
    "slug": "banking-superapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A5F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.banking.superapp",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Используется для безопасного входа в приложение",
        "NSCameraUsageDescription": "Используется для сканирования QR-кодов"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E3A5F"
      },
      "package": "com.banking.superapp",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Используется для безопасного входа"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Используется для сканирования QR-кодов"
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://api.banking-app.com/api/v1",
      "socketUrl": "wss://api.banking-app.com"
    }
  }
}
